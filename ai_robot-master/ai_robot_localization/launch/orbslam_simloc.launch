<!--orbslam load launch, can only be used with modified ORB-SLAM-->
<launch>
  <arg name="mapfolder" default="/home/zx/tmps/test/"/>
  <node name="orb_slam_node" pkg="orb_slam_saveload" type="Stereo" args="$(find orb_slam_saveload)/../../../Vocabulary/ORBvoc.txt $(find ai_robot_localization)/orbslam_configs/Stereo.yaml false 0 true $(arg mapfolder)" output="screen">
    <param name="use_compressed" value="false"/>
    <remap from="/sensors/stereo_cam/left/image_rect_color" to="/camera/left/image_raw" />
    <remap from="/sensors/stereo_cam/right/image_rect_color" to="/camera/right/image_raw" />
  </node>
</launch>


