<launch>
  <param name="robot_description"
    textfile="$(find ai_robot_sensors)/urdf/testbed04.urdf" />

  <node name="robot_state_publisher" pkg="robot_state_publisher"
    type="robot_state_publisher" />

  <arg name="load_state_filename" default="$(find ai_robot_localization)/carto_maps/20190404.pbstream" />
  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find ai_robot_localization)/carto_configs
          -configuration_basename carto_hw_loc.lua
          -load_state_filename $(arg load_state_filename)
          -start_trajectory_with_default_topics=false">
    <remap from="imu" to="sensors/imu" />
    <!--remap from="odom" to="RosAria/pose" /-->
    <remap from="points2" to="sensors/lidar/velodyne_points" />
    <!--remap from="points2_1" to="horizontal_laser_3d" />velodyne_points
    <remap from="points2_2" to="vertical_laser_3d" /-->
  </node>

  <arg name="urdf_file" default="$(find xacro)/xacro.py '$(find ai_robot_sensors)/urdf/pioneer3at.urdf'" />
  <param name="robot_description" command="$(arg urdf_file)" /> 
  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />
  <node name="posepub_node" pkg="ai_robot_localization"
      type="posepub.py" />

  <arg name="init_pose_file" default="$(find huawei_nav)/../../../Record/map/test1/init_pose.txt"/>
  <node name="poseinit_node" pkg="ai_robot_localization"
      type="init_carto_loc.py" args="$(arg init_pose_file)"/>

  <node name="rviz" pkg="rviz" type="rviz" required="true"
      args="-d $(find ai_robot_localization)/carto_configs/carto_demo_3d.rviz" />
</launch>
